@model Task_ModulesImplementation.ViewModels.DetailsDepartmentViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Department</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Logo)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="@Url.Content("~/Images/" + Model.Logo)" alt="Logo" class="img-fluid rounded-circle" style="max-width: 150px; height: auto;" />
                }
                else
                {
                    <p>No logo available.</p>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Parent Departments</h4>
        @if (Model.parentDepartments != null && Model.parentDepartments.Any())
        {
            <ul class="list-group">
                @foreach (var parentDepartment in Model.parentDepartments)
                {
                    <li class="list-group-item">@parentDepartment.Name</li>
                }
            </ul>
        }
        else
        {
            <p>No parent departments.</p>
        }
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">Sub-Departments</h4>
        @if (Model.subDepartments != null && Model.subDepartments.Any())
        {
            <ul class="list-group">
                @foreach (var subDepartment in Model.subDepartments)
                {
                    <li class="list-group-item">@subDepartment.Name</li>
                }
            </ul>
        }
        else
        {
            <p>No sub-departments.</p>
        }
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
